<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/litigation_flag_people_linear"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            android:background="@mipmap/open"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/litigation_flag_people_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:src="@mipmap/one_b" />

            <TextView
                android:id="@+id/litigation_flag_people"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="人民调解"
                android:textColor="@color/flow_item_flag_text_bg"
                android:textSize="@dimen/flow_item_flag_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/litigation_flag_pay_linear"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:layout_marginLeft="90dp"
            android:layout_marginRight="80dp"
            android:background="@drawable/flow_close"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/litigation_flag_pay_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:src="@mipmap/two" />

            <TextView
                android:id="@+id/litigation_flag_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支付令"
                android:textColor="@color/flow_item_flag_text_normal"
                android:textSize="@dimen/flow_item_flag_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/litigation_flag_arbitration_linear"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="60dp"
            android:background="@drawable/flow_close"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/litigation_flag_arbitration_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginRight="10dp"
                android:src="@mipmap/three" />

            <TextView
                android:id="@+id/litigation_flag_arbitration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="申请仲裁"
                android:textColor="@color/flow_item_flag_text_normal"
                android:textSize="@dimen/flow_item_flag_size" />
        </LinearLayout>
    </LinearLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp">


        <ProgressBar
            style="@style/StyleProgressBarLitigation"
            android:layout_width="1100dp"
            android:layout_height="16dp"
            android:layout_margin="@dimen/margin_normal"
            android:background="@drawable/shape_progressbar_bg"
            android:max="100"
            android:progress="60"
            android:thumb="@drawable/thumb" />

        <SeekBar
            android:id="@+id/seekBar1"
            android:layout_width="1100dp"
            android:layout_height="25dp"
            android:layout_marginTop="7dp"
            android:max="100"
            android:maxHeight="21dp"
            android:minHeight="21dp"
            android:progress="15"
            android:progressDrawable="@drawable/seekbar_bg"
            android:thumb="@drawable/flow_thumb_bg" />

        <SeekBar
            android:id="@+id/seekBar2"
            android:layout_width="1100dp"
            android:layout_height="25dp"
            android:layout_marginTop="7dp"
            android:max="100"
            android:maxHeight="21dp"
            android:minHeight="21dp"
            android:progress="50"
            android:progressDrawable="@drawable/seekbar_bg"
            android:thumb="@drawable/flow_thumb_bg" />

        <SeekBar
            android:id="@+id/seekBar3"
            android:layout_width="1100dp"
            android:layout_height="25dp"
            android:layout_marginTop="7dp"
            android:max="100"
            android:maxHeight="21dp"
            android:minHeight="21dp"
            android:progress="84"
            android:progressDrawable="@drawable/seekbar_bg"
            android:thumb="@drawable/flow_thumb_bg" />

        <SeekBar
            android:id="@+id/seekBar4"
            android:layout_width="1100dp"
            android:layout_height="25dp"
            android:layout_marginTop="5dp"
            android:max="100"
            android:maxHeight="21dp"
            android:minHeight="21dp"
            android:progress="15"
            android:progressDrawable="@drawable/seekbar_bg"
            android:thumb="@drawable/flow_thumb" />
    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/item_sub_flow_viewpager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>