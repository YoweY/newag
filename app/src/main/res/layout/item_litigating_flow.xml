<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/home_item_margin"
        android:background="@color/left_listView_bg"
        android:gravity="center"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="@dimen/home_title_margin_img_size"
            android:layout_height="@dimen/home_title_margin_img_size"
            android:layout_marginBottom="@dimen/margin_normal"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="@dimen/home_title_margin_img_right"
            android:layout_marginTop="@dimen/margin_normal"
            android:src="@mipmap/icon7_blue" />

        <TextView
            android:id="@+id/item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/home_title_margin_text_top"
            android:layout_marginTop="@dimen/home_title_margin_text_top"
            android:gravity="center_vertical"
            android:text="@string/litigating"
            android:textColor="@color/item_title_bg"
            android:textSize="@dimen/item_title_textSize" />
    </LinearLayout>
    <TextView
        android:id="@+id/item_no_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:text="暂无"
        android:layout_marginBottom="20dp"
        android:textColor="@color/evi_item_content"
        android:textSize="@dimen/evi_item_title"
        android:visibility="gone"/>
    <LinearLayout
        android:id="@+id/item_flow_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/flow_no"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="40dp"
            android:text="非讼流程"
            android:background="@color/flow_item_title_bg"
            android:textColor="@color/flow_item_flag_text_bg"
            android:textSize="24sp" />

        <Button
            android:id="@+id/flow_yes"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="100dp"
            android:background="@color/flow_item_title_normal"
            android:textColor="@color/flow_item_flag_text_normal"
            android:text="诉讼流程"

            android:textSize="24sp" />
    </LinearLayout>

    <View
        android:id="@+id/item_flow_lines"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="20dp"
        android:background="#007ADE" />


    <FrameLayout
        android:id="@+id/litigation_flow_frameLayout"
        android:layout_gravity="center"
        android:layout_width="1100dp"
        android:layout_height="wrap_content"/>

</LinearLayout>