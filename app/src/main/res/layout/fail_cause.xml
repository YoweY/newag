<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="35%"
            android:layout_marginBottom="10dp"
            android:textColor="@color/lit_item_left_num"
            android:textSize="@dimen/lit_item_flag" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30%"
            android:layout_marginBottom="10dp"
            android:textColor="@color/lit_item_left_num"
            android:textSize="@dimen/lit_item_flag" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="25%"
            android:layout_marginBottom="10dp"
            android:textColor="@color/lit_item_left_num"
            android:textSize="@dimen/lit_item_flag" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20%"
            android:layout_marginBottom="10dp"
            android:textColor="@color/lit_item_left_num"
            android:textSize="@dimen/lit_item_flag" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15%"
            android:layout_marginBottom="10dp"
            android:textColor="@color/lit_item_left_num"
            android:textSize="@dimen/lit_item_flag" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10%"
            android:layout_marginBottom="10dp"
            android:textColor="@color/lit_item_left_num"
            android:textSize="@dimen/lit_item_flag" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5%"
            android:layout_marginBottom="15dp"
            android:textColor="@color/lit_item_left_num"
            android:textSize="@dimen/lit_item_flag" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/lit_item_left_num"
            android:textSize="@dimen/lit_item_flag" />

    </LinearLayout>
    <View

        android:layout_marginTop="10dp"
        android:layout_marginLeft="70dp"
        android:background="#f5f5f5"
        android:layout_width="850dp"
        android:layout_height="40dp"/>
    <View

        android:layout_marginTop="80dp"
        android:layout_marginLeft="70dp"
        android:background="#f5f5f5"
        android:layout_width="850dp"
        android:layout_height="40dp"/>
    <View

        android:layout_marginTop="160dp"
        android:layout_marginLeft="70dp"
        android:background="#f5f5f5"
        android:layout_width="850dp"
        android:layout_height="40dp"/>
    <View

        android:layout_marginTop="240dp"
        android:layout_marginLeft="70dp"
        android:background="#f5f5f5"
        android:layout_width="850dp"
        android:layout_height="40dp"/>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@id/test"
        android:orientation="horizontal">

        <TextView
            android:layout_width="36dp"
            android:layout_height="260dp"
            android:layout_marginRight="100dp"
            android:background="@color/lit_item_bg" />

        <TextView
            android:layout_width="36dp"
            android:layout_height="143dp"
            android:layout_marginRight="100dp"
            android:layout_marginTop="117dp"
            android:background="@color/lit_item_bg" />

        <TextView
            android:layout_width="36dp"
            android:layout_height="120dp"
            android:layout_marginRight="100dp"
            android:layout_marginTop="140dp"
            android:background="@color/lit_item_bg" />

        <TextView
            android:layout_width="36dp"
            android:layout_height="113dp"
            android:layout_marginRight="100dp"
            android:layout_marginTop="147dp"
            android:background="@color/lit_item_bg" />

        <TextView
            android:layout_width="36dp"
            android:layout_height="88dp"
            android:layout_marginRight="100dp"
            android:layout_marginTop="172dp"
            android:background="@color/lit_item_bg" />

        <TextView
            android:layout_width="36dp"
            android:layout_height="60dp"
            android:layout_marginRight="100dp"
            android:layout_marginTop="200dp"
            android:background="@color/lit_item_bg" />

        <TextView
            android:layout_width="36dp"
            android:layout_height="40dp"
            android:layout_marginRight="100dp"
            android:layout_marginTop="220dp"
            android:background="@color/lit_item_bg" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear1"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/test"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="举证不力"
            android:textColor="@color/lit_item_content"
            android:textSize="@dimen/lit_item_flag" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:text="欠缺法律依据"
            android:textColor="@color/lit_item_content"
            android:textSize="@dimen/lit_item_flag" />

        <TextView
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:gravity="center"
            android:maxLines="2"
            android:text="不满足 法定条件"
            android:textColor="@color/lit_item_content"
            android:textSize="@dimen/lit_item_flag" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:text="欠缺事实依据"
            android:textColor="@color/lit_item_content"
            android:textSize="@dimen/lit_item_flag" />

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:gravity="center"
            android:maxLines="2"
            android:text="夫妻感情 尚未破裂"
            android:textColor="@color/lit_item_content"
            android:textSize="@dimen/lit_item_flag" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:text="考虑子女成长"
            android:textColor="@color/lit_item_content"
            android:textSize="@dimen/lit_item_flag" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:text="不在审理范围"
            android:textColor="@color/lit_item_content"
            android:textSize="@dimen/lit_item_flag" />
    </LinearLayout>


</RelativeLayout>