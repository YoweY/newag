<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:keepScreenOn="true"
    android:id="@+id/id_rootView"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">



    <RelativeLayout
        android:id="@+id/chat_dialog_Relate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp">

        <ImageView
            android:id="@+id/chat_dialog_img"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@color/Tra"
            android:layout_marginTop="10dp"
            android:src="@mipmap/jiqiren" />

        <TextView
            android:id="@+id/chat_dialog_select"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/chat_dialog_img"
            android:background="@mipmap/duodanxuanbeijing"
            android:gravity="center"
            android:text="单选"
            android:textColor="#fff"
            android:textSize="40dp" />

        <!--<TextView-->
            <!--android:id="@+id/chat_dialog_title"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginLeft="10dp"-->
            <!--android:layout_marginRight="50dp"-->
            <!--android:layout_marginTop="25dp"-->
            <!--android:layout_toRightOf="@id/chat_dialog_select"-->
            <!--android:lineSpacingExtra="@dimen/line_space"-->
            <!--android:textScaleX="1.1"-->
           <!--android:layout_centerInParent="true"-->
            <!--android:text="你的房产是否是婚前财产？"-->
            <!--android:textColor="#353548"-->
            <!--android:textSize="40dp" />-->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_toRightOf="@id/chat_dialog_select"
            android:scrollbars="none">

            <TextView
            android:id="@+id/chat_dialog_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="50dp"
                android:lineSpacingExtra="@dimen/line_space"
                android:text="以下是小法的回答，请查阅！"
                android:textColor="#353548"
                android:textScaleX="1.1"
                android:textSize="40dp" />
        </ScrollView>
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="55dp"
        android:background="#B8B8B8" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    >


    <LinearLayout
        android:id="@+id/item_choose_yes"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/item_choose_yes_img"
            android:layout_width="47dp"
            android:layout_height="47dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="50dp"
            android:background="@mipmap/feixuanze" />

        <TextView
            android:id="@+id/item_choose_yes_text"
            android:layout_toRightOf="@id/item_choose_yes_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="是"
            android:layout_marginRight="50dp"
            android:textColor="#353548"
            android:textSize="40dp" />

    </LinearLayout>

    <LinearLayout

        android:id="@+id/item_choose_no"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="80dp"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:id="@+id/item_choose_no_img"
            android:layout_width="47dp"
            android:layout_height="47dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="20dp"
            android:background="@mipmap/feixuanze"
          />

        <TextView
            android:id="@+id/item_choose_no_text"
            android:layout_toRightOf="@id/item_choose_no_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="否"
            android:layout_marginRight="50dp"
            android:textColor="#353548"
            android:textSize="40dp" />

    </LinearLayout>
</LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="55dp"
        android:background="#B8B8B8" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:gravity="center">


            <ImageView
                android:id="@+id/animationIV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/waituoyuan"
                android:visibility="visible"
                />

            <ImageView
                android:id="@+id/animationIV1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@mipmap/xiaoyuan"
                android:visibility="visible"
                />

            <ImageView
                android:id="@+id/animationIV2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/animation1"
                android:visibility="visible" />

            <ImageButton
                android:id="@+id/voice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/shibeijing"
                android:visibility="visible"
                />
            <ImageView
                android:id="@+id/voiceBg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@color/Tra"
                android:src="@mipmap/button_mic"
                android:visibility="visible"
                />

            <RelativeLayout
                android:id="@+id/mVoiceRelativeLayout"
                android:layout_width="100dp"
                android:layout_height="100dp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/chat_dialog_no"
            android:layout_width="198dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:background="@mipmap/quxiaoxuanzeanniu"
            android:gravity="center"
            android:padding="5dp"
            android:text="关闭"
            android:textColor="#7B7B7B"
            android:textSize="40dp" />

        <TextView
            android:id="@+id/chat_dialog_yes"
            android:layout_width="558dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:background="@mipmap/querenxuanzeanniu"
            android:gravity="center"
            android:padding="5dp"
            android:text="确认选择(30s)"
            android:textColor="#fff"
            android:textSize="40dp" />

    </LinearLayout>
</LinearLayout>