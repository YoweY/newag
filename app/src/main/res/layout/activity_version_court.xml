        <ImageView
            android:id="@+id/imgPosition7"
            android:layout_width="265dp"
            android:layout_height="265dp"
            android:layout_below="@id/imgPosition3"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@id/imgPosition6"
            android:src="@mipmap/myfatiao" />

        <ImageView
            android:layout_width="218dp"
            android:layout_height="50dp"
            android:layout_below="@id/imgPosition3"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="60dp"
            android:layout_toRightOf="@id/imgPosition6"
            android:src="@mipmap/textfatiao" />
        ?<!---->
        <ImageView
            android:id="@+id/imgPosition8"
            android:layout_width="265dp"
            android:layout_height="265dp"
            android:layout_below="@id/imgPosition4"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@id/imgPosition7"
            android:src="@mipmap/myqita" />

        <ImageView
            android:layout_width="108dp"
            android:layout_height="50dp"
            android:layout_below="@id/imgPosition4"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"
            android:layout_toRightOf="@id/imgPosition7"
            android:src="@mipmap/textqita" />

        <TextView
            android:layout_width="131dp"
            android:layout_height="wrap_content"
            android:text="点击口述 其他情形"
            android:textColor="@color/white"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="24dp"
            android:layout_toRightOf="@id/imgPosition7"
            android:layout_below="@id/imgPosition4"
            android:textSize="32dp"/>
        ?<!---->


    </RelativeLayout>


</RelativeLayout>